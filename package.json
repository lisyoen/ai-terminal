{
  "name": "ai-terminal",
  "version": "0.5.0",
  "description": "Electron app with terminal and AI chat panel featuring SSH execution, session logging, and command history",
  "type": "commonjs",
  "main": "dist/electron/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:renderer && npm run build:electron",
    "build:electron": "tsc",
    "build:renderer": "vite build",
    "electron": "electron dist/electron/electron/main.js",
    "start": "npm run build && npm run electron",
    "start:prod": "electron dist/electron/electron/main.js",
    "dist:win": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --dir --win",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "clean": "rimraf dist release"
  },
  "keywords": [
    "electron",
    "terminal",
    "ai",
    "chat"
  ],
  "author": "AI Terminal Team",
  "license": "MIT",
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "dotenv": "^17.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-react": "^4.1.0",
    "electron": "^32.0.0",
    "electron-builder": "^24.6.4",
    "electron-updater": "^6.1.4",
    "eslint": "^8.51.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.lisyoen.ai-terminal",
    "productName": "AI Terminal",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "package.json",
      "!**/*.map",
      "!**/node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "AI-Terminal-${version}-Setup.${ext}",
      "legalTrademarks": "lisyoen"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
