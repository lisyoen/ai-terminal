{
  "name": "ai-terminal",
  "version": "0.5.0",
  "description": "Electron app with terminal and AI chat panel featuring SSH execution, session logging, and command history",
  "type": "commonjs",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:electron && npm run build:renderer",
    "build:electron": "tsc",
    "build:renderer": "vite build",
    "electron": "electron dist/electron/main.js",
    "start": "npm run build && npm run electron",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "clean": "rimraf dist release"
  },
  "keywords": [
    "electron",
    "terminal",
    "ai",
    "chat"
  ],
  "author": "AI Terminal Team",
  "license": "MIT",
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "dotenv": "^17.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-react": "^4.1.0",
    "electron": "^32.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.51.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.example.ai-terminal",
    "productName": "AI Terminal",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
